<!Doctype html>
<html>
	<head>
		<script>
			function checkDigit(){
				var flag = 0;
				var text1 = document.form1.number;
				var res = document.form1.result;
				var digit = /(^\d+$)|(^\d+\â€™\d+$)/;
				if(text1.value.match(digit)){
					res.value="True";
					flag = 1;
				}
				else {
					alert("Data enetred is not numeric");
					res.value="False";
					
				}
				if(flag == 1) alert("Form Submitted Successfully");
				
			}
		</script>
	</head>
	<body onload="document.form1.reset();">
		<form name="form1" >
			Enter Number: <input type="text" name="number" /> <br/>
			Result:<input type="text" name="result" style="margin-left:65px" /> <br/>
			<input type="button" value="Submit" onClick="checkDigit()" />
		</form>
